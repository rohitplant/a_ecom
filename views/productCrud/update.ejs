<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('../component/head',{data:{title:'product add'}}); %>
</head>

<body>
    <%- include("../component/menu") %>

    <div class = "container">
        <div class="offset-sm-3 col-6 pt-4">
            <form action="/product/<%=product.id%>" method="post">
                <div class="mb-3">
                   <label class = "form-label">Name</label>
                   <input type="text" name="username" value="<%= product.name%>" class="from-control" placeholder="product name">
                </div>

                <div class="mb-3">
                    <label class = "form-label">price</label>
                    <input type="text" name="rupees" value="<%= product.price%>" class="from-control" placeholder="product name">
                 </div>

                 <div class="mb-3">
                    <label class = "form-label">description</label>
                    <input type="text" name="describe" value="<%= product.description%>" class="from-control" placeholder="product name">
                 </div>
                 <input type="submit" value="Update Product">
            </form>
        </div>

    </div>
        <%- include("../component/footer") %>
</body>

</html>