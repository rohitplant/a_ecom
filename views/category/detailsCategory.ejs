<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('../component/head',{data:{title:'Category List'}}) %>
</head>
<body>
    <%- include('../component/menu') %>
    <div class="container">
        <div class="row pt-5">
            <table class="table table-bordered table-hover">
                <tr>
                    <th>Name</th>
                    <td>  <%= category.name %> </td>
                </tr>
                <tr>
                    <th>Image</th>
                    <td>  <%= category.img %> </td>
                </tr>
            </table>
        </div>
        <div class="col-sm-12 pt-4">
            <a href="/category/update/<%= category.id%>" class="btn btn-success">Update</a>
            <form method="delete" action="/category/<%= category.id %>">
                <input type="submit" value="Delete" class="btn btn-danger mt-3">
            </form>
        </div>
    </div>
    

    <%- include('../component/footer') %>
</body>
</html>